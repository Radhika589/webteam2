@model Webteam2.Models.ContractorsToValidateModel
@{
    ViewData["Title"] = "ValidateContractors";
}
<br />
<h2 class="text-info">ContractorsToValidate</h2>
<br />

<div class="cust_container row p-0 m-0">
    <div class="col-12 border p-3 mt-3">
            <table id="users_table" class="table table-striped border">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email Name</th>
                        <th> Validate</th>
                        <th> Profile</th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var User in Model.UsersList)
                    {
                        <tr>
                            <td> @User.FirstName</td>
                            <td> @User.LastName</td>
                            <td> @User.Email</td>
                            <td>
                                <form asp-controller="Account" asp-action="ValidateContactor" asp-route-id="@User.Id">
                                    <button class="custbtn" type="submit">Validate</button>
                                </form>
                            </td>
                            <td>
                                <a asp-controller="Profile" asp-action="Details" asp-route-id="@User.Id">Profile</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
    </div>
</div>


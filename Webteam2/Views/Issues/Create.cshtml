@model Webteam2.Models.Issue 

@{
    ViewData["Title"] = "Create";
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">

        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}
<div class="align-content-center container flex-sm-wrap">
    <h2>Create new issue</h2>

    <h4>Issue</h4>
    <hr />
    <form asp-action="Create" class="container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Title" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="Title" class="form-control" />
            </div>

            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label for="" class="col-sm-2 col-form-label">Region</label>
            <div class="col-sm-4">
                <select for="Region" id="Region" class="form-control"></select>
            </div>
            <span for="Region" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="City">City</label>
            <div class="col-sm-4">
                <select id="City" asp-for="CityId" class="col-sm-10 form-control"></select>
            </div>
            <span asp-validation-for="CityId" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="Payment" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input id="Payment" type="number" asp-for="Payment" class="col-sm-6 form-control" />
            </div>

            <span asp-validation-for="Payment" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="LocalCurrency" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <select id="LocalCurrency" class="col-sm-10 form-control"></select>                
            </div>

            <span asp-validation-for="LocalCurrency" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-8">
                <textarea rows="10" wrap="hard" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input id="createNewIssueBtn" type="submit" value="Create" class="btn btn-primary" />
        </div>
        <span id="IssueResult">@Html.ViewData["IssueResult"]</span>
        <div>
            <a asp-action="Index" asp-controller="Issues">Back to List</a>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/CitySelector.js"></script>
    <script src="~/js/CurrencySelector.js"></script>
}

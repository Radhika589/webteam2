@model Webteam2.Models.UserLists

@{
    ViewData["Title"] = "Index";

}

<br />
<h2 class="text-info">Users List</h2>
<br />

<div class="cust_container row p-0 m-0">
    
    <div class="col-12 border p-3 mt-3">
        <form class="float-left">
            <p>
                <input type="text" asp-for="SearchString" placeholder="Filter Users" />
                <input type="submit" value="Filter"  />
            </p>

        </form>
        <table id="users_table" class="table table-striped border table-responsive float-right">
            <thead>
            <tr class="">
                <th class="col-4 text-left">First Name</th>
                <th class="col-4 text-left">Last Name</th>
                <th class="col-1 text-left">Reputation</th>
                <th class="col-1 text-left">Profile</th>
                <th class="col-2 text-left">Role</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var User in Model.Customers)
            {
                <tr>
                    <td class="col-4 text-left"> @User.FirstName</td>
                    <td class="col-4 text-left"> @User.LastName</td>
                    <td class="col-1 text-left"> @User.Reputation</td>
                    <td class="col-1 text-left">
                        <a asp-controller="Profile" asp-action="Details" asp-route-id="@User.Id">Profile</a>
                    </td>
                    <td class="col-2">Customer</td>
                </tr>
            }
            @foreach (var User in Model.ValidatedContractors)
            {
                <tr>
                    <td> @User.FirstName</td>
                    <td> @User.LastName</td>
                    <td> @User.Reputation</td>
                    <td>
                        <a asp-controller="Profile" asp-action="Details" asp-route-id="@User.Id">Profile</a>
                    </td>
                    <td> @User.Location</td>
                    <td>Contractor</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

